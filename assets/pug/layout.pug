	block vars
	body(itemscope itemtype="http://schema.org/WebPage", class= bodyClass)
		.menu-overlay
		.modal-overlay

		.hamburguer
			.navigation-toggle
				span.menu-icon

		header.header(role="banner", itemscope, itemtype="http://schema.org/WPHeader")
			.header--wrap
				.header--logo
					a(href=baseHref + "")
						img(src=baseHref + "img/logo.png", alt="")

				.header--menu---wrap
					nav(role="navigation", itemscope="itemscope", itemtype="http://www.schema.org/SiteNavigationElement").menu--primary
						ul
							li(class=(bodyClass === 'home')? "current-menu-item" : "")
								a(href=baseHref + '', itemprop="url") Home

							li(class=(bodyClass === 'o-escritorio')? "current-menu-item" : "")
								a(href=baseHref + 'o-escritorio', itemprop="url") O Escritório

							li(class=(bodyClass === 'equipe')? "current-menu-item" : "")
								a(href=baseHref + 'equipe', itemprop="url") Equipe

							li(class=(bodyClass === 'areas-de-atuacao')? "current-menu-item" : "")
								a(href=baseHref + 'areas-de-atuacao', itemprop="url") Áreas de Atuação

							li(class=(bodyClass === 'noticias-e-publicacoes')? "current-menu-item" : "")
								a(href=baseHref + 'noticias-e-publicacoes', itemprop="url") Notícias e Publicações

							li(class=(bodyClass === 'contato')? "current-menu-item" : "")
								a(href=baseHref + 'contato', itemprop="url") Contato

					nav.menu--language
						ul
							li(class=(lang === 'pt')? "current-menu-item" : "")
								a(href="#") PT

							li(class=(lang === 'en')? "current-menu-item" : "")
								a(href="#") EN



					//- nav.menu--language
						ul
							li(class=(lang === 'pt')? "current-menu-item" : "")
								a(href=(lang === 'pt')? baseHref + bodyClass : baseHref + "/" + lang + "/" + bodyClass) PT

							li(class=(lang === 'en')? "current-menu-item" : "")
								a(href=(lang === 'en')? baseHref + bodyClass : baseHref + "/" + lang + "/" + bodyClass) EN



						


		block content


		footer.footer(role="contentinfo", itemscope itemtype="http://schema.org/WPFooter")
