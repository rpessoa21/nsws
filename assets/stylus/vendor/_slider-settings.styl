// slider swiper idangerous
// ================
.slider--single
	background-color #eee
	margin-bottom 40px
	padding 0
	position relative

.card-slider--single
	a
		width 100%
		
	.slider-image
		position relative
		width 100%
		
		@media (max-width menuViewPort - 1)
			max-height calc(100vh - 200px)
			overflow hidden

		img
			@extends .img-responsive
			


// .swiper-pagination
