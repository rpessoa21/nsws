.swiper-pagination
	width 100%

.swiper-pagination-bullet
	background-color transparent
	border 2px rgba(darkColorMaster, .5) solid
	height 12px
	margin-left 7px
	opacity 1
	transition .4s ease
	width 12px
	

.swiper-pagination-bullet-active
	background darkColorTwo

.swiper-button-prev
	background-image url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M0%2C22L22%2C0l2.1%2C2.1L4.2%2C22l19.9%2C19.9L22%2C44L0%2C22L0%2C22L0%2C22z'%20fill%3D'%237C7A7B'%2F%3E%3C%2Fsvg%3E")
	
		
.swiper-button-next
	background-image url("data:image/svg+xml;charset=utf-8,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%2027%2044'%3E%3Cpath%20d%3D'M27%2C22L27%2C22L5%2C44l-2.1-2.1L22.8%2C22L2.9%2C2.1L5%2C0L27%2C22L27%2C22z'%20fill%3D'%237C7A7B'%2F%3E%3C%2Fsvg%3E")

.swiper-button-prev
.swiper-button-next
	@media (max-width menuViewPort - 1)
		display none
		



.item-slider
	.swiper-slide
		opacity 0 !important
		
		&-active
			opacity 1 !important