// parallax
// =================

div[class^='item-parallax-']
	position absolute
	z-index -1
	
.item-parallax-1
	background-color rgba(lightColorTwo, .8)
	height 200px
	left 0
	top 0
	transition .4s ease
	width 400px
	
.item-parallax-2
	background-color rgba(darkColorMaster, .4)
	height 260px
	right 0
	top 200px
	transition .8s ease
	width 400px
	

.item-parallax-3
	background-color rgba(darkColorMaster, .4)
	height 360px
	right 10%
	top 20px
	transition .8s ease
	width 360px
	

.item-parallax-4
	background-color rgba(darkColorTwo, .6)
	height 120px
	right 8%
	top 0
	transition .8s ease
	width 120px
	

.item-parallax-5
	background-color rgba(darkColorTwo, .2)
	height 80px
	right 6%
	top 200px
	transition .8s ease
