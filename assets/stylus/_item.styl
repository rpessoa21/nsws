.item-grid--service-list---li
	// background-color darkColorTwo
	background-repeat no-repeat
	padding 70px 0
	position relative
	

	&:after
		content ''
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		z-index -1
			
	

