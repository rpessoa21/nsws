// ====================

.item-grid--portfolio---text
	background-color #e1caca
	padding 60px 80px

.item-grid--portfolio---text----title
	font 60px fontSecond
	margin-bottom 30px
	

.item-grid--portfolio---text----description
	p
		font-size 14px
		line-height 1.7
		
		+ p
			margin-top 20px




