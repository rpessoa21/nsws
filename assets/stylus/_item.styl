// ====================

.item-grid--portfolio---image
	align-items baseline
	display flex
	width 100%
	position absolute
	right 0

.item-grid--portfolio---screenshot
	img
		@extends .img-max-responsive
		
	> div
		position relative

.item-grid--portfolio---screenshot----mobile
	@media (min-width tablet)
		transform translate(20px, -20px)
		z-index 3

.item-grid--portfolio---screenshot----tablet
	@media (min-width tablet)
		transform translate(10px, -10px)
		z-index 2
	
.item-grid--portfolio---screenshot----notebook
	@media (min-width tablet)
		transform translate(-60px, -14px)
		z-index 1


.grid--portfolio
	.swiper-wrapper
		align-items baseline !important
		padding 20px

	.swiper-slide
		@media (max-width tablet - 1)
			text-align center
		
		@media (min-width tablet)
			width auto !important




