// full banner
// ===========
		
.item-banner--fullscreen---primary
.item-banner--fullscreen---second
	color white
	position relative
	text-align center
	z-index 2
	
.item-banner--fullscreen---primary
	font-family fontMaster
	font-size 28px
	font-weight 700
	
	@media (min-width desktop)
		font-size 48px

	h2
		font-family inherit
		font-size inherit
		
		&:after
			display none
	
.item-banner--fullscreen---second
	font-size 22px
	font-weight 300
	
	@media (min-width desktop)
		font-size 36px
	

.item-banner--fullscreen---downbutton
	bottom 20px
	left 50%
	position absolute
	transform translateX(-50%)
	z-index 2
	
	a
		align-items center
		border-radius 50%
		display flex
		justify-content center
		height 60px
		transition .4s ease
		width 60px



@keyframes scroll
	0%
		transform translateY(0)
	
	30%
		transform translateY(60px)
	

svg #wheel
	animation scroll ease 2s infinite
	





// background image cover
// ====================

.item-background-image
	background-size cover







