// conteudo que se alterna left/right
// ===============

.item-alternate
	.row
		align-items center
		padding 80px 0

		@media (min-width desktop)
			
			// linhas pares
			// =========
				
			&:nth-of-type(even)
				flex-direction row-reverse
				
				// p
				h3
				.item-section--button
					text-align right
				


			// linhas impares
			// ========
				
			&:nth-of-type(odd)
				.item-alternate--image
					text-align right
					

				.item-section--button
					text-align left
					


.item-alternate--title
	margin-bottom 40px
	
	> *
		font-family fontMaster
		font-size 40px
		font-weight 300
	

.item-alternate--text
	+ .item-alternate--button
		margin-top 60px
	
	p
		line-height 1.8
		text-align justify
		

.item-alternate--image
	position relative
	
	img
		position relative
		z-index 1000




// back to top
// ===========

.item-back-to-top
	background #4ca2d1 url(../img/arrow.png) no-repeat 48% 46%
	border-radius 50%
	bottom 8vh
	cursor pointer
	display none
	height 54px
	position fixed
	right 10px
	transition background .4s ease
	width 54px
	z-index 1000
	
	&:hover
		background lighten(#4ca2d1, 10) url(../img/arrow.png) no-repeat 48% 46%