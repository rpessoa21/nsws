.item-grid--portfolio---image
	align-items baseline
	display flex
	width 100%
	// position absolute
	// right 0

.item-grid--portfolio---screenshot
	img
		@extends .img-max-responsive
		
	> div
		position relative

.item-grid--portfolio---screenshot----mobile
	transform translateY(20px)
	z-index 3

.item-grid--portfolio---screenshot----tablet
	transform translate(-20px, 10px)
	z-index 2
	
.item-grid--portfolio---screenshot----notebook
	transform translate(-60px, -14px)
	z-index 1





