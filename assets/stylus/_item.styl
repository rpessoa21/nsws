// conteudo que se alterna left/right
// ===============

.item-alternate
	@media (max-width desktop - 1)
		padding 0 20px
		

	.container
		margin 0 auto
		max-width 992px
	

	.row
		align-items center
		padding 80px 0
		

	.item-alternate-wrap
		@media (min-width desktop)
			
			// linhas pares
			// =========
				
			&:nth-of-type(even)
				.row
					flex-direction row-reverse
				
					p
					h3
					.item-section--button
						text-align right
				


			// linhas impares
			// ========
				
			&:nth-of-type(odd)
				.row
					.item-alternate--image
						text-align right
						

					.item-section--button
						text-align left
					


.item-alternate--title
	margin-bottom 27px
	
	@media (max-width tablet - 1)
		text-align center
	
	> *
		font-family fontMaster
		font-size 40px
		// font-weight 300
	

.item-alternate--text
	@media (max-width tablet - 1)
		text-align center

		
	+ .item-alternate--button
		margin-top 60px
	
	p
		line-height 1.8
		

.item-alternate--image
	position relative
	
	@media (min-width tablet) and (max-width desktop - 1)
		text-align right
		
	@media (max-width tablet - 1)
		text-align center
	
	img
		height auto
		max-width 100%
		position relative
		z-index 1000



