.item-banner-squares--banner
	background-size cover
	padding 100px 0


.item-banner-squares--text
	padding-bottom 40px
	text-align center





// =======================

.item-section--title
	margin-bottom 70px
	



.item-section--button
	text-align center
	
	.card-grid--portfolio &
	.card-grid--service-list &
		margin-top 70px

	body.home .grid--portfolio &
		margin-top 60px



// ===============

.item-video--fullscreen
	max-height 100vh
	overflow hidden
	position relative
	
	
	&:after
		background-color rgba(black, .5)
		content ''
		height 100%
		left 0
		top 0
		position absolute
		width 100%
		z-index 1


	video
		transform scale(1.5)

	



// parallax
// =================

div[class^='item-parallax-']
	position absolute
	z-index 1
	
.item-parallax-1
	background-color rgba(lightColorTwo, .8)
	height 200px
	left 0
	top 0
	transition .4s ease
	width 400px
	
.item-parallax-2
	background-color rgba(darkColorMaster, .4)
	height 260px
	right 0
	top 200px
	transition .8s ease .1s
	width 400px
	



// about us
// ============

.item-about-us--wrap
	align-items center
	display flex
	flex-flow row wrap
	justify-content center
	height 100vh
	
	
.item-about-us--float
	margin 0 auto
	max-width 768px
	
	
.item-about-us--title
	margin-bottom 40px
	
	> *
		color white
		text-align center


.item-about-us--text
	color white
	text-align center
	
	p
		line-height 1.7
		
		+ p
			margin-top 20px
			



