.item-grid--service-list---li
	// background-color darkColorTwo
	background-repeat no-repeat
	padding 70px 0
	position relative
	

	&:after
		content ''
		height 100%
		left 0
		position absolute
		top 0
		width 100%
		z-index -1
			
	

	&:nth-of-type(even)
		// background-color lightColorTwo
		color white
		background-position right
		
		&:after
			background linear-gradient(to right, #18072f, darkColorTwo)


	&:nth-of-type(odd)
		
		&:after
			background linear-gradient(to right, white, lightColorTwo)
		

	&:nth-last-of-type(1)
		@media (min-width menuViewPort)
			padding-bottom 100px


.item-grid--service-list---item
	text-align center
	position relative
	z-index 1
	
	p
		custom-size(1024px)
	

.item-grid--service-list---title
	font-family fontSecond
	font-size 24px
	margin-bottom 10px
	line-bottom--center()
	
	img
		height auto
		margin-right 10px
		width 28px
		
	

.item-grid--service-list---icon
	height 120px
	
	svg
		height 120px
		width 120px
		
		
.item-grid--service-list---description
	font-size 15px
	padding 0 10px
	
	p
		line-height 1.8



