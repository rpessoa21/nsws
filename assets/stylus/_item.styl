.item-grid--portfolio---image
	align-items baseline
	display flex
	width 100%
	// position absolute
	// right 0

.item-grid--portfolio---screenshot
	img
		@extends .img-max-responsive
		
	> div
		position relative

.item-grid--portfolio---screenshot----mobile
	transform translateY(20px)
	z-index 3

.item-grid--portfolio---screenshot----tablet
	transform translate(-20px, 10px)
	z-index 2
	
.item-grid--portfolio---screenshot----notebook
	transform translate(-60px, -14px)
	z-index 1





// ====================
// ====================

.item-grid--portfolio---text
	background-color #e1caca
	padding 60px 80px

.item-grid--portfolio---text----title
	font 60px fontSecond
	margin-bottom 30px
	

.item-grid--portfolio---text----description
	p
		font-size 14px
		line-height 1.7
		
		+ p
			margin-top 20px




// ====================

.item-grid--service-list---item
	custom-size(1024px)
	text-align center
	

.item-grid--service-list---title
	font-family fontSecond
	font-size 24px
	margin-bottom 10px
	

.item-grid--service-list---icon
	height 120px
	
	svg
		height 120px
		width 120px
		
		
.item-grid--service-list---description
	line-top--center()
	font-size 15px
	padding 0 10px
	
	p
		line-height 1.8



