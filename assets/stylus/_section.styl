// ====================
// section
// ====================
section
	padding 70px 0
	
	// espacamento
	// =========
	&.gap
		padding 50px 0
		
	&.no-gap
		padding 0
	
	// fundo
	// ========
	&.gray
		background-color #f5f5f5
		
	// toda section que terminar com --light fica com fundo cinza
	// ==============
	&[class$="--light"]
		@extends section.gray
	


	// ====================
	// ====================
	
	&:nth-of-type(1)
		.main &
			padding-top 0
			

	&:nth-last-of-type(1)
		.main &
			padding-bottom 0


	// =====================
	
	&.banner-squares--left-top
		margin-top 180px
		position relative
		
		&:before
			background url(../img/squares--gray.png) no-repeat
			content ''
			height 180px
			left 0
			max-width 600px
			position absolute
			top -40px
			width 100%
			


	&.grid--alternate
		.row
			position relative
			z-index 2