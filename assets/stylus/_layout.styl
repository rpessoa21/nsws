// header hamburguer
// ==============

.header--hamburguer
	position absolute
	right 16px
	top 40px
	
	header.sticky &
		@media (min-width menuViewPort)
			display none





// header menu wrap
// ==================

.header--menu---wrap
	@media (max-width menuViewPort - 1)
		position absolute
		right 0
		top 90px
		transform translateX(100%)
		transition transform .4s ease .1s
		
		.active&
			height calc(100vh - 150px)
			overflow auto
			transform translateX(0px)
		
	@media (min-width menuViewPort)
		display flex
		padding-bottom 10px
	
	.sticky &
		flex 1 1






