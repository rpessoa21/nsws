// ===========
// header
// ===========

.header
	backface-visibility hidden
	position fixed
	width 100%
	z-index 2000
	
	@media (min-width menuViewPort)
		position absolute
	

	&.sticky
		@media (min-width menuViewPort)
			animation sticky .6s ease
			background-color white
			border-top none
			box-shadow 0 2px 2px rgba(black, .2)
			display flex
			position fixed
			top 0
			width 100%
			z-index 2000
			

@keyframes sticky
	0%
		transform translateY(-100%)	
	100%
		transform translateY(0)





// header wrap
// ======================

.header--wrap
	align-items center
	display flex
	height 120px
	justify-content space-between
	overflow hidden
	position relative
	custom-size(siteWidth)

	.sticky &
		background-color white
		transition .4s ease
		
		@media (min-width menuViewPort)
			background-color transparent
			height 80px
			
		@media (min-width 1280px)
			padding 0 40px
			

	@media (max-width menuViewPort)
		overflow visible





