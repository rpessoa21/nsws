// ==============================
// hamburguer
// ==============================

.hamburguer
	cursor pointer

.menu-icon
	hamburger-generator(29px, 3px, 4px, white, $timing-function: ease)
	

.navigation-toggle
	display inline-block
	transform translate(11px, 18px)
	
	&.active
		.menu-icon
			hamburger-animation()

			&:before
			&:after
				background-color white