// form
// ===============
placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
	
+placeholder()
	color darkColorTwo
	font 14px fontMaster
	// transform translateY(-2px)
	
input
	&[type="text"]
	&[type="email"]
	&[type="password"]
		background-color #e0e0e0
		border none
		outline none
		padding 8px 20px
		width 100%
		
	&[type="submit"]
		background-color darkColorMaster
		border none
		// border-radius 3px
		color white
		cursor pointer
		font 15px fontMaster
		outline none
		text-transform uppercase
		padding 7px 16px
	
textarea
	background-color #e0e0e0
	border none
	height 110px
	outline none
	padding 18px 30px
	width 100%
	
select
	background-color #e0e0e0
	border none
	color darkColorTwo
	font italic 15px fontSecond
	outline none
	padding 16px 30px
	width 100%
	



.form-login
	input
		margin-bottom 10px




// =============

.form-contact
	margin-bottom 50px
	position relative
	
	@media (min-width tablet)
		max-width 280px

	&:after
		@media (min-width desktopSmall)
			background-color #a8a8a8
			content ''
			height 100%
			position absolute
			right -60px
			top 0
			width 1px
		
	form
		margin-top 30px

	label
		font-size 13px
		margin 14px 0 7px
		display block
		
	input[type="submit"]
		display block
		margin 14px 0 0 auto
		padding 0





// form newsletter
// ===========

.form-newsletter
	margin-left auto
	max-width 320px

	.field
		position relative
		
	input
		&[type="submit"]
			font-size 13px
			position absolute
			top 0
			right 0




// form contact center
// =================

.form-contact--center
	custom-size(640px)

	label
		display inline-block
		font-size 14px
		margin-bottom 10px
		
	input
	textarea
		font 13px fontMaster
		margin-bottom 16px
		
	input
		&[type="submit"]
			display block
			margin-left auto
			margin-right 0



