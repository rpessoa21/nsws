.form-contact
	margin-bottom 50px
	position relative
	
	@media (min-width tablet)
		max-width 280px

	&:after
		@media (min-width desktopSmall)
			background-color #a8a8a8
			content ''
			height 100%
			position absolute
			right -60px
			top 0
			width 1px
		
	form
		margin-top 30px

	label
		font-size 13px
		margin 14px 0 7px
		display block
		
	input[type="submit"]
		display block
		margin 14px 0 0 auto
		padding 0






.form-newsletter
	margin-left auto
	max-width 320px





