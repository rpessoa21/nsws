placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}
	
+placeholder()
	color darkColorTwo
	font italic 15px fontSecond
	transform translateY(-2px)
	
input
	&[type="text"]
	&[type="email"]
	&[type="password"]
		background-color #e0e0e0
		border none
		outline none
		padding 8px 20px
		width 100%
		
	&[type="submit"]
		background-color transparent
		border none
		cursor pointer
		font 300 13px fontMaster
		letter-spacing 3px
		outline none
		// padding 13px 60px
	
textarea
	background-color #e0e0e0
	border none
	height 110px
	outline none
	padding 18px 30px
	width 100%
	
select
	background-color #e0e0e0
	border none
	color darkColorTwo
	font italic 15px fontSecond
	outline none
	padding 16px 30px
	width 100%
	



