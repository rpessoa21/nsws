.form-curriculum
	margin-top 50px
	
	form
		align-items center
		display flex
		
	.submit
		padding-left 40px
		transform translateY(-5px)
		
	.button
		position absolute
		right -1px
		top -1px
		background-color white
		padding 8.5px 20px
		box-shadow 0px 2px 6px rgba(black, .4)
		font 300 13px fontMaster
		letter-spacing 3px
		


input[type="file"]
.anexo
	height 0.1px
	left 0
	opacity 0
	overflow hidden
	position absolute
	width 0.1px
	z-index -1


	+ label
		border 1px #ccc solid
		cursor pointer
		display inline-block
		font-size 14px
		margin-bottom 10px
		padding 10px
		position relative
		transition background-color .4s ease
		width 100%
		
		span
			color transparent


input[type="file"]:focus + label
input[type="file"]:focus .button
input[type="file"] + label:hover
input[type="file"] .button:hover
	background-color lightColorMaster


input[type="file"]:focus + label
	outline 1px dotted #000
	outline -webkit-focus-ring-color auto 5px


input[type="file"] + label *
	pointer-events: none;




