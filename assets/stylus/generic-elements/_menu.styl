.menu--primary
	position relative
	
	header:not(.sticky) &
		@media (min-width menuViewPort)
			transform translateY(14px)
		
	
	@media (min-width menuViewPort)
		display inline-block
	
	> ul
		@extends .flex
		
		@media (max-width menuViewPort - 1)
			flex-direction column
			
				
		@media (min-width menuViewPort)
			justify-content center
			margin-top 20px

		> li
			position relative
			
			+ li
				@media (min-width menuViewPort)
					margin-left 26px
					
					
			&:last-child
				@media (min-width menuViewPort)
					padding-right 0
				
			> a
				color white
				font-size 14px
				letter-spacing 2.8px
				text-transform uppercase
				transition color .4s ease
				
				@media (max-width menuViewPort - 1)
					display block
					font-size 20px
					padding 10px 6px 10px 10px
					text-align right
					
				&:hover
					@media (min-width menuViewPort)
						color #000
						
				.sticky &
					@media (min-width menuViewPort)
						color darkColorMaster
						font-size 13px
					
			&.current-menu-item
				a
					@media (min-width menuViewPort)
						color #000
	


// ===============
.menu--language
	@media (min-width menuViewPort)
		position absolute
		right 0
		transform translateY(-18px)
	
	.sticky &
		@media (min-width menuViewPort)
			display none

	ul
		display flex
	
		@media (max-width menuViewPort - 1)
			justify-content flex-end
			margin-top 30px
			padding-right 7px
		
		li
			+ li
				margin-left 10px
				
			a
				background-image url(../img/flags.png)
				background-repeat no-repeat
				height 17px
				overflow hidden
				text-indent -9999px
				width 30px
				
				&.pt
					background-position 0 0
					
				&.en
					background-position -40px 0



// ===================
.menu-overlay
	background-color rgba(white, .97)
	height 100%
	left 0
	opacity 0
	pointer-events none
	position fixed
	top 0
	transition .4s cubic
	width 100%
	z-index 1000
	
	@media (min-width menuViewPort)
		z-index 5000
	
	&.active
		@media (max-width menuViewPort - 1)
			opacity 1
			pointer-events all


