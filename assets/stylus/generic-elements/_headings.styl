// ===================
// headings
// ===================

h1
	color darkColorTwo
	font-size 29px
	font-weight 300
	text-transform uppercase

	
	@media (min-width desktop)
		font-size 32px
		letter-spacing 10px

h2
	font-family fontSecond
	font-size 22px
	font-weight 700
	text-align center
	line-bottom--center()

	@media (min-width tablet)
		font-size 40px

h3
	font-family fontSecond
	font-size 20px

	@media (min-width tablet)
		font-size 24px

h4
	font-size 17px

	@media (min-width tablet)
		font-size 19px
